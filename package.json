{
  "name": "sanctum-client",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts",
      "browser": "./dist/browser/sanctum-client.js"
    }
  },
  "description": "Official Sanctum client library for browser environments",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/browser/sanctum-client.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c --mode production",
    "serve": "live-server --port=8080 --open=dev.html",
    "dev": "rollup -c --mode development --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "nostr",
    "remote signer",
    "widget",
    "websocket",
    "auth"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.14.0",
    "jest": "^29.0.0",
    "live-server": "^1.2.2",
    "rollup": "^4.24.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.10"
  }
}
